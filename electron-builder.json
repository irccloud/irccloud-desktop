{
  "appId": "com.irccloud.desktop",
  "forceCodeSigning": true,
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "default",
        "arch": "universal"
      }
    ],
    "darkModeSupport": true,
    "electronUpdaterCompatibility": ">=2.15.0",

    "hardenedRuntime" : true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist"
  },
  "afterSign": "./scripts/afterSign.js",
  "dmg": {
    "icon": null,
    "sign": false
  },
  "mas": {
    "publish": null
  },
  "linux": {
    "executableName": "irccloud",
    "executableArgs": [
      "--no-sandbox"
    ],
    "category": "Network;IRCClient",
    "target": [
      "deb",
      "AppImage",
      "snap"
    ]
  },
  "appImage": {
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "deb": {
    "artifactName": "${name}_${version}_${os}_${arch}.${ext}"
  },
  "snap": {
    "artifactName": "${name}_${version}_${os}_${arch}.${ext}",
    "grade": "stable",
    "publish": {
      "provider": "snapStore",
      "channels": ["edge"]
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis-web",
        "arch": "x64"
      }
    ],
    "sign": "./scripts/sign.js"
  },
  "nsisWeb": {
    "artifactName": "${productName}.${ext}"
  },
  "protocols": [
    {
      "name": "IRC server URL",
      "role": "Viewer",
      "schemes": [
        "irc",
        "ircs"
      ]
    }
  ],
  "files": [
      "!**/{.DS_Store,.editorconfig,.eslint*,.jshint*,.snyk,.travis.*,appveyor.yml,Makefile,README.md,SECURITY.md,*.provisionprofile}",
      "!scripts${/*}",
      "!docs${/*}",
      "!codesign${/*}"
  ]
}