{
  "name": "irccloud-desktop-build",
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "build",
    "dist": "build",
    "test": "eslint .",
    "app": "electron ./app"
  },
  "build": {
    "mac": {
      "target": [
        "dmg",
        "zip",
        "mas"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "dmg": {
      "icon": ""
    },
    "appId": "com.irccloud.desktop",
    "category": "public.app-category.productivity",
    "npmRebuild": false,
    "protocols": [
      {
        "name": "IRC server URL",
        "schemes": ["irc", "ircs"]
      }
    ]
  },
  "devDependencies": {
    "electron-builder": "^6.4.1",
    "electron-prebuilt": "1.3.5",
    "eslint": "^3.4.0",
    "jshint": "^2.9.3",
    "tsconfig-glob": "^0.4.3",
    "typescript": "^1.8.10"
  },
  "dependencies": {}
}
